        size_hint_y: None
        height: 60

        Label:
            id: empty_aux_2

        Button:
            id: b2
            text: 'Voltar'
            size_hint_x: None
            font_name: './Font/alba.TTF'
            color: 0, 0, 0
            background_normal: './Images/hdgreen.png'
            font_size: 25
            bold: True
            width: 200
            on_release: root.back_page()

        Label:
            id: empty_aux_2
    Label:
        id: empty_aux_2
